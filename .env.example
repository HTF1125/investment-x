# =============================================================================
# Investment-X Environment Variables
# Copy this file to .env and fill in the values
# =============================================================================

# --- Required ---
DB_URL=postgresql://user:password@localhost:5432/investmentx
SECRET_KEY=change-me-to-a-strong-random-secret

# --- Auth ---
ACCESS_TOKEN_EXPIRE_MINUTES=1440
COOKIE_SECURE=false

# --- CORS ---
CORS_ORIGINS=http://localhost:3000

# --- Debug ---
DEBUG_MODE=false

# --- AI Providers ---
GEMINI_API_KEY=
MINIMAX_API_KEY=

# --- Cloudflare R2 Object Storage ---
R2_ACCESS_ID=
R2_ACCESS_KEY=
R2_CLIENT_ID=
R2_BUCKET_NAME=

# --- Telegram ---
TELEGRAM_API_ID=
TELEGRAM_API_HASH=

# --- Email ---
EMAIL_LOGIN=
EMAIL_PASSWORD=
EMAIL_RECIPIENTS=[]

